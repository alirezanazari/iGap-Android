        <shape android:shape="rectangle">
            <gradient android:angle="-0" android:startColor="#1e96ff" android:endColor="#db0ce6" />

            <corners android:topRightRadius="8dp" android:topLeftRadius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-0" android:startColor="#1e96ff" android:endColor="#db0ce6" />

            <corners android:topRightRadius="8dp" android:topLeftRadius="8dp" />
        </shape>
    </item>
</selector>